<%- model_class = Supplier -%>
<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize + " details" %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
    <dd><%= @supplier.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
    <dd><%= @supplier.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_method) %>:</strong></dt>
    <dd><%= @supplier.payment_method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
	<dd><%= @supplier.notes %><dd>
	<% @supplier.users.each do |users|%>
	  <dt><strong> Assigned Users: </strong></dt>
      <dd><%= users.first_name %></dd>
	<% end %>

	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),
	              stocks_path, :class => 'btn'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_supplier_path(@supplier), :class => 'btn' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              supplier_path(@supplier),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>