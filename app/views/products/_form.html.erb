<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @product %>
  <div class="control-group">
    <%= f.label :product_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :unit_price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :product_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :product_description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :minimum_stock, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :minimum_stock, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
